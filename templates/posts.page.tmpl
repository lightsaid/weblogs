{{template "admin" .}}

{{define "css"}}
<link rel="stylesheet" href="/static/css/card-layout.css">
</style>

{{end}}

{{define "content"}}
{{$posts := index .Data "posts" }}
<div class="container">
    <div class="card mb-5 mb-lg-10">
        <div class="card-header">
            <div class="card-title d-flex flex-column justify-content-center">
                <h4>博文管理</h4>
            </div>
            <div class="card-toolbar">
                <!-- <a href="#" class="btn btn-sm btn-primary my-1">添加</a> -->
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-md">
                    <thead>
                        <tr>
                            <th scope="col">#ID</th>
                            <th scope="col">作者</th>
                            <th scope="col">标题</th>
                            <!-- <th scope="col">内容</th> -->
                            <th scope="col">缩略图</th>
                            <th scope="col">#操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{range $posts}}
                        <tr>
                            <td>{{.ID}}</td>
                            <td>{{.Author}}</td>
                            <td title=""{{.Title}}>{{.Title}}</td>
                            <!-- <td>{{.Content}}</td> -->
                            <td><img src="{{.Thumb}}" alt=""></td>
                            <td>
                                <button type="button" class="btn btn-link">编辑</button>
                                <button type="button" class="btn btn-link text-danger">删除</button>
                            </td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>

                <!-- <form action="/posts" method="post">
                    <input type="text" name="" id="">
                    {{.Data.csrfField}}
                    <button type="submit">提交</button>
                </form> -->
            </div>
        </div>
    </div>
</div>

{{end}}