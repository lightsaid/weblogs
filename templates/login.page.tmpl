{{template "base" .}}

{{define "css"}}
<style>
    html,
    body {
        height: 100%;
        flex-direction: column !important;
        display: flex !important;
        padding-top: 100px;
        background-color: #f5f5f5;
    }

    .btn:focus {
        box-shadow: none !important;
    }

    .p-left-15 {
        padding-left: 15%;
    }

    .form-signin {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        margin: auto;
        background-color: #fff;
    }

    .form-signin .checkbox {
        font-weight: 400;
    }

    .form-signin .form-floating:focus-within {
        z-index: 2;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.125rem rgb(13 110 253 / 25%) !important;
    }

    .form-signin input[type="password"] {
        margin-bottom: 10px;
    }

    .checkbox label {
        cursor: pointer !important;
    }

    .btn-link {
        text-decoration: none;
    }
</style>
{{end}}


{{define "content"}}
<main id="app">
    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-2 g-3">
            <div class="col d-flex flex-column justify-content-center p-left-15">
                <h1 class="">轻言博客</h1>
                <h4>学以致用，坚持学习一百年不动摇</h4>

                <!-- 测试数据地方 -->
                <!-- <h5 style="color: red;"></h5> -->

            </div>
            <div class="col" style="min-height: 400px;">
                <form action="#" class="form-signin border rounded shadow" @submit.prevent="onSubmit" novalidate>
                    <div class="mb-3">
                        <label for="email" class="form-label mb-1 small">邮 箱:</label>
                        <input type="email" id="email" class='form-control 
                        {{with .JsonValidator.Errors.Get "email"}} is-invalid {{end}}' v-model="formFileds.email"
                            placeholder="请输入邮箱">
                        {{with .JsonValidator.Errors.Get "email"}}
                        <span class="text-danger">{{.}}</span>
                        {{end}}

                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label mb-1 small">密 码:</label>

                        <input type="password" id="password" class='form-control 
                         {{with .JsonValidator.Errors.Get "password"}} is-invalid {{end}}'
                            v-model="formFileds.password" placeholder="请输入密码">
                        {{with .JsonValidator.Errors.Get "password"}}
                        <span class="text-danger">{{.}}</span>
                        {{end}}

                    </div>

                    <div class="mb-3" v-if="formFileds.formType==formTypeEnum.register">
                        <label for="ack_password" class="form-label mb-1 small">确认密码:</label>
                        <input type="password" class='form-control
                        {{with .JsonValidator.Errors.Get "ack_password" }} is-invalid {{end}}' id="ack_password"
                            v-model="formFileds.ack_password" placeholder="请输入密码">
                        {{with .JsonValidator.Errors.Get "ack_password"}}
                        <span class="text-danger">{{.}}</span>
                        {{end}}
                    </div>

                    <div class="checkbox mb-3 d-flex justify-content-between"
                        v-if="formFileds.formType==formTypeEnum.login">
                        <label>
                            <input type="checkbox" v-model="formFileds.remember"> 记住我
                        </label>
                        <a class="btn btn-link">
                            忘记密码？
                        </a>
                    </div>
                    <button class="w-100 btn btn-lg btn-primary mb-3" type="submit"
                        v-html="formFileds.formType==formTypeEnum.login?'登录':'注册'">
                    </button>

                    <div class="text-center">
                        <button class="btn btn-sm  btn-outline-success " type="button"
                            @click="formFileds.formType = formFileds.formType==formTypeEnum.login?formTypeEnum.register:formTypeEnum.login"
                            v-html="formFileds.formType==formTypeEnum.login?'创建账户':'马上登录'">
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<!-- 页底 -->
<footer class="footer mt-auto py-3 bg-light">
    <div class="container">
        <span class="text-muted">Place sticky footer content here.</span>
    </div>
</footer>

{{end}}

{{define "js"}}
<script src="/static/js/vue.global.prod.3.2.js"></script>

{{$user := index .Data "user"}}
<script>


    console.log("$user>>> ", "{{$user}}")

    var { createApp } = Vue
    // 表单类型: "Login"、"Register"
    var formTypeOptions = {
        "login": "Login",
        "register": "Register"
    }

    // 登录/注册
    var submitHandler = {
        "Login": function (forms) {
            var options = {
                method: "POST",
                headers: new Headers().append("Content-Type", "text/html; charset=utf-8"),
                body: forms
            }
            $$.request("/admin/login", options)
        },

        "Register": function (forms) {
            var options = {
                method: "POST",
                headers: new Headers().append("Content-Type", "text/html; charset=utf-8"),
                body: forms
            }
            $$.request("/admin/login", options)
        }
    }


    // 使用Vue创建App, 响应式数据
    createApp({
        data() {
            return {
                formTypeEnum: Object.assign({}, formTypeOptions),
                formFileds: { // 如果 "{{with $user.FormType}} {{.}} {{end}}" 存在空格则渲染为" Register ",也存在空格
                    formType: "{{with $user.FormType}}{{.}}{{end}}" || formTypeOptions.register,
                    email: "{{with $user.Email}}{{.}}{{end}}",
                    password: "{{with $user.Password}}{{.}}{{end}}",
                    ack_password: "{{with $user.AckPassword}}{{.}}{{end}}",
                    remember: "{{with $user.Remember}}{{.}}{{end}}" || false,
                }
            }
        },
        methods: {
            onSubmit: function () {
                submitHandler[this.formFileds.formType](this.formFileds)
            }
        },
    }).mount("#app")

</script>



{{end}}